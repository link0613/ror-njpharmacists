  <%= nested_form_for faculty_proposel, :url=>url, :remote=>form_request, html: { multipart: true }  do |f| %>
    <% if faculty_proposel.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(faculty_proposel.errors.count, "error") %> prohibited this nomination from being saved:</h2>

        <ul>
        <% faculty_proposel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <h3>Faculty Info:</h3>
    
    <div class="field">
      <div class="form-group">
        <label>*Name</label>
        <%= f.text_field :name,class: "form-control form-control",required: true %>
      </div>
    </div> 

    <div class="field">
      <div class="form-group">
        <label>*Address</label> 
        <%= f.text_field :address,class: "form-control",required: true %>
      </div>
    </div> 
    <div class="field">
      <div class="form-group">
        <label>*City</label> 
        <%= f.text_field :city,class: "form-control",required: true %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <label>*State</label>  
        <%= f.text_field :state,class: "form-control",required: true %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <label>*Zip</label>
        <%= f.text_field :zip,class: "form-control" ,required: true%>
      </div>  
    </div>
    <div class="field">
      <div class="form-group">  
        <label>*Office Phone</label>
        <%= f.text_field :office_phone ,class: "form-control",required: true%>
      </div>
    </div>
    <div class="field">
      <div class="form-group">  
        <label>*Mobile Phone</label>
        <%= f.text_field :mobile_phone,class: "form-control",required: true %></div>
      </div>
    <div class="field">
      <div class="form-group">  
        <label>*Areas of Expertise</label>
        <%= f.text_field :area_of_expertise,  class: "string required form-control datepicker", required: true %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">  
        <label>*Geographic/day/evening preferences or limitations</label>
        <%= f.text_field :limitations,class: "form-control" ,required: true%>
      </div>
    </div>
    <hr>

    <h4>If you have a continuing education activity/program idea, please tell us about it below.</h4>

    <div class="field">
      <div class="form-group"> 
        <lable>*Program Title</lable>   
        <%= f.text_field :program_title,class: "form-control",required: true %>
      </div>
    </div>
    <div class="field">
      <div class="form-group"> 
        <lable>*Topic Area (i.e. women's health, cardiology)/subject (i.e. pregnancy, CHF) </lable>   
        <%= f.text_field :area,class: "form-control" ,required: true %>
      </div>
    </div>
    
    <div class="field">
      <div class="form-group"> 
        <lable>*State the identified practice gap related to the proposed presentation and the evidence that supports it</lable>   
        <%= f.text_field :evidence,class: "form-control" ,required: true %>
      </div>
    </div>

    <div class="field">
      <div class="form-group"> 
        <lable>*Program Length</lable>   
        <%= f.select :program_length, options_for_select(["1 hr", "1.5 hr", "2 hr", "hr, half day","full day"]),{:prompt => "Select length"},  class: "form-control" ,required: true%>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <lable>*Will the activity be knowledge-based (K), application-based (A), or a practice-based(P)? </lable>   
        <%= f.select :activity_based, options_for_select(["knowledge-based (K)", "application-based (A)","practice-based(P)"]),{:prompt=>"Select One"},class: "form-control",required: true %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <lable> *Brief summary of the program</lable> 
        <%= f.text_field :brief_summary,class: "form-control",required: true %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <label>As a NJPhA member benefit, each issue of the New Jersey Journal of Pharmacy has a CE article posted to our website (free for members).  Would you be interested in volunteering to author a home study CE or know an interested colleague?</label>
        <%= f.text_field :intrested_memeber,class: "form-control" %> 
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <%= f.fields_for :proposel_documents do |f| %>
         <lable>Please provide your CV with the completed form</lable> 
          <%= f.file_field :document ,:multipart=>true %>
          <%= f.link_to_remove "Remove Document" %>
        <% end %>
      </div>
      <%= f.link_to_add "Upload Document", :proposel_documents %>
    </div>  
    <div class="field">
      <div class="form-group">
        <%=recaptcha_tags%>
      </div>
    </div>
    <div class="actions">
      <%= f.button 'Submit', class: 'btn btn-primary' %>
    </div>
  <% end %>