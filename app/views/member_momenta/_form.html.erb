<%= simple_form_for(@member_momentum) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email%>
    <%= f.input :about_recognition %>
    <%= f.input :member_attachment, as: :file %>
  	<div class="field">
			<%= f.label :momentum_date %>
			<%= f.text_field :momentum_date, value: "#{@member_momentum.momentum_date.strftime("%d/%m/%Y") if @member_momentum.momentum_date }", placeholder: "DD/MM/YYYY"  ,class: "string required form-control datepicker", required: true %>
		</div>
  </div><br>

	<div class="actions">
		<%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
	</div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
    	format: 'dd/mm/yyyy',
    	autoclose: true,
    });
  });
</script>