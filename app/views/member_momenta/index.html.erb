<h1>Member Momentum</h1>

<table class='table table-striped' width="100%" style="table-layout: fixed;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>About recognition</th>
      <th>Momentum date</th>
      <th>Attachment File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member_momenta.each do |member_momentum| %>
      <tr>
        <td><%= link_to member_momentum.name, member_momentum %></td>
        <td><%= member_momentum.email %></td>
        <td><%= member_momentum.about_recognition %></td>
        <td><%= member_momentum.momentum_date.strftime("%d/%m/%Y") if member_momentum.momentum_date %></td>
        <td><%= image_tag(member_momentum.member_attachment,style:"max-width: 100%;max-height: 100px;") if member_momentum.member_attachment.exists? %>
        <td><%= link_to 'Edit', edit_member_momentum_path(member_momentum), class: 'btn btn-primary pull-right' %></td>
        <td><%= link_to 'Destroy', member_momentum, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger pull-right' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Momentum', new_member_momentum_path, class: "btn" %>
